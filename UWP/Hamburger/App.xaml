    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Hamburger"
    xmlns:wc="using:Microsoft.UI.Xaml.Controls"
    xmlns:wm="using:Microsoft.UI.Xaml.Media">    

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <wc:XamlControlsResources ControlsResourcesVersion="Version2">
                    <wc:XamlControlsResources.MergedDictionaries>
                        <ResourceDictionary Source="ms-appx:///Common.ViewLayer/Resources/ColorfulNavigationView.xaml"/>
                    </wc:XamlControlsResources.MergedDictionaries>
                </wc:XamlControlsResources>
            </ResourceDictionary.MergedDictionaries>

            <Thickness x:Key="NavigationViewContentPresenterMargin">0,0,0,0</Thickness>
        </ResourceDictionary>
    </Application.Resources>

</Application>
