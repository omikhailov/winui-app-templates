<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Thickness x:Key="TileTitleMargin">0,0,0,16</Thickness>

    <Thickness x:Key="TileItemMargin">0,8,0,0</Thickness>

    <Style x:Key="CaptionedCombobox" TargetType="ComboBox">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="Margin" Value="{StaticResource TileItemMargin}" />
        <Setter Property="SelectedValuePath" Value="Tag" />
    </Style>

</ResourceDictionary>
